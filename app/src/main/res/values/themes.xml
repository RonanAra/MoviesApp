<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MoviesApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ButtonIcon" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">@dimen/button_icon_size</item>
        <item name="android:minHeight">@dimen/button_icon_size</item>
    </style>

    <style name="WatchCardDefault">
        <item name="cardBackgroundColor">@color/lighter_gray</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_half</item>
        <item name="android:layout_marginTop">@dimen/margin_half</item>
        <item name="contentPaddingTop">0dp</item>
        <item name="cardElevation">@dimen/watch_card_elevation</item>
    </style>

    <style name="WatchCardTitle">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginEnd">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_quarter</item>
        <item name="android:textColor">@color/secondary_blue</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:scrollbarThumbVertical">@android:color/transparent</item>
    </style>


    <style name="TitleStyle" parent="TextStyle">
        <item name="android:textSize">@dimen/size_16sp</item>
    </style>

    <style name="CardStyle">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">3dp</item>
    </style>


    <style name="RecyclerViewStyle">
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingStart">@dimen/size_16dp</item>
        <item name="android:paddingEnd">@dimen/size_16dp</item>
    </style>


    <style name="TextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>